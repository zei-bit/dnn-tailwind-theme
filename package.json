{
  "name": "dnn-tailwind-theme",
  "version": "1.0.0",
  "description": "DNN theme with Tailwind CSS v4",
  "scripts": {
    "dev": "postcss css/tailwind.css -o css/skin.min.css --watch --map",
    "dev:poll": "cross-env CHOKIDAR_USEPOLLING=1 CHOKIDAR_INTERVAL=250 postcss css/tailwind.css -o css/skin.min.css --watch --map",
    "build": "cross-env NODE_ENV=production postcss css/tailwind.css -o css/skin.min.css --map"
  },
  "devDependencies": {
    "tailwindcss": ">=4.0.0",
    "@tailwindcss/postcss": ">=4.0.0",
    "postcss": ">=8.4.0",
    "postcss-cli": ">=10.0.0",
    "cross-env": ">=7.0.0"
  },
  "keywords": ["dnn", "dotnetnuke", "tailwind", "theme", "2sxc"],
  "author": "",
  "license": "MIT"
}
