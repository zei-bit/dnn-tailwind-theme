root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ascx,aspx,cshtml,razor}]
indent_size = 4

[*.{css,scss,sass}]
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2
